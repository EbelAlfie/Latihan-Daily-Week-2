<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/red</item>
        <item name="title">@string/toolbar_title</item>
    </style>
    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/marginview</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="textview_item">
        <item name="android:layout_marginBottom">@dimen/marginview</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textview_item_detail">
        <item name="android:layout_marginBottom">@dimen/detail_item_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="btn_itemalamat">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="btn_simpan_style">
        <item name="android:background">@drawable/simpan_btn_design</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>