<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/item_layout_margin"
    android:background="@drawable/background_item_produk"
    android:elevation="4dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tv_diskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="30%"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_diskon"
            android:padding="@dimen/item_container_padding"
            app:layout_goneMarginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/design_tv_diskon" />

        <ImageView
            android:id="@+id/iv_gambar_produk"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_height"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_below="@id/tv_diskon"/>

        <TextView
            android:id="@+id/tv_title_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="title"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_gambar_produk"
            android:layout_below="@+id/iv_gambar_produk"/>

        <TextView
            android:id="@+id/tv_harga_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp.1000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_produk"
            android:textSize="15sp"
            android:layout_below="@+id/tv_title_produk"/>

        <TextView
            android:id="@+id/tv_harga_spesial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp.5000"
            android:textColor="@color/red"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_harga_normal" />

        <TextView
            android:id="@+id/tv_keranjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Stok habis"
            android:padding="@dimen/item_container_padding"
            android:textColor="@color/white"
            android:background="@drawable/tv_blue_design"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_harga_spesial" />
</androidx.constraintlayout.widget.ConstraintLayout>
