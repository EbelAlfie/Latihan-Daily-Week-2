<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/provinsi_title"
        android:background="@color/purple_200"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_provinsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tv_style"
        android:layout_below="@id/toolbar"/>
    <TextView
        android:id="@+id/tv_kota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tv_style"
        android:layout_below="@id/tv_provinsi"/>
    <TextView
        android:id="@+id/tv_kecamatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tv_style"
        android:layout_below="@id/tv_kota"/>
    <TextView
        android:id="@+id/tv_kelurahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tv_style"
        android:layout_below="@id/tv_kecamatan"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kelurahan"/>
    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:text="Anda belum pilih alamat"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Alamat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/button"/>
</RelativeLayout>