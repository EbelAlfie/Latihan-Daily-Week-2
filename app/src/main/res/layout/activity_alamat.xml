<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KecamatanActivity">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_provinsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test"
        style="@style/subtitle_style"/>
    <TextView
        android:id="@+id/tv_kota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test"
        style="@style/subtitle_style"
        android:layout_below="@id/tv_provinsi"/>
    <TextView
        android:id="@+id/tv_kecamatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test"
        style="@style/subtitle_style"
        android:layout_below="@id/tv_kota"/>
    <TextView
        android:id="@+id/tv_kelurahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Test"
        style="@style/subtitle_style"
        android:layout_below="@id/tv_kecamatan"/>

    <Button
        android:id="@+id/btn_ganti_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/btn_padding"
        android:layout_below="@id/tv_kelurahan"
        android:layout_centerInParent="true"
        android:text="@string/ganti_alamat"/>
</RelativeLayout>