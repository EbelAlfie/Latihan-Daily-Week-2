<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        style="@style/general_text_view"
        android:layout_margin="@dimen/item_margin"
        android:textSize="@dimen/text_big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/btn_date_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/general_text_view"
        android:layout_margin="@dimen/item_margin"
        app:layout_constraintStart_toEndOf="@id/btn_date_set"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:text="Set Date"/>
    <ImageButton
        android:id="@+id/btn_time_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin"
        android:src="@drawable/baseline_access_time_24"
        app:layout_constraintTop_toBottomOf="@id/btn_date_set"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/general_text_view"
        android:layout_margin="@dimen/item_margin"
        app:layout_constraintStart_toEndOf="@id/btn_time_set"
        app:layout_constraintTop_toBottomOf="@id/btn_date_set"
        android:text="Set Time" />
    <EditText
        android:id="@+id/et_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Label"
        android:layout_margin="@dimen/item_margin"
        app:layout_constraintTop_toBottomOf="@id/btn_time_set"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="deskripsi"
        android:layout_margin="@dimen/item_margin"
        app:layout_constraintTop_toBottomOf="@id/et_label"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/btn_set_once"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_margin="@dimen/item_margin"
        app:layout_constraintTop_toBottomOf="@id/et_deskripsi"/>


</androidx.constraintlayout.widget.ConstraintLayout>